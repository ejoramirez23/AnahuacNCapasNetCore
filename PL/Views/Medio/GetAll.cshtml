@model ML.Medio
@{
    ViewData["Title"] = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}





<div class="row text-center">
    <div class="col col-lg-12">
        <h1>Lista de Medios:</h1>
    </div>
</div>
<div class="row text-center">
    <div class="col-lg-3">
